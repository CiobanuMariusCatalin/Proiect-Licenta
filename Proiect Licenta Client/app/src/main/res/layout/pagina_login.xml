<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
   >
    <EditText
        android:id="@+id/paginaLoginUser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLength="50"
        android:hint="@string/numeUtilizator"
        android:inputType="textAutoComplete"
      />
    

    <EditText
        android:maxLength="50"
        android:id="@+id/paginaLoginParola"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
         android:hint="@string/Parola"
        android:inputType="textPassword"
/>

    <Button
        android:id="@+id/paginaLoginButtonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:text="Autentificare" />
        <Button
        android:id="@+id/paginaLoginButtonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SignUp"
        android:text="Inregistrare" />

</LinearLayout>